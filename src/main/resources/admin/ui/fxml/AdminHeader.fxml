<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.text.Text?>
<?import javafx.geometry.Insets?>

<StackPane xmlns:fx="http://javafx.com/fxml/1" BorderPane.alignment="CENTER" stylesheets="@/shared/ui/css/DiscordTheme.css"
           fx:controller="com.example.chatroom.admin.controllers.AdminHeaderController">
    <styleClass>
        <String fx:value="panel"/>
        <String fx:value="header-panel"/>
    </styleClass>
    <BorderPane>
        <left>
            <HBox alignment="CENTER_LEFT" spacing="10" styleClass="app-header">
                <ImageView fx:id="appIcon" fitHeight="32" fitWidth="32" preserveRatio="true">
                    <Image url="@../../../shared/images/feline.png"/>
                </ImageView>
                <Text text="CHATROOM" styleClass="app-header-title"/>
            </HBox>
        </left>

        <center>
            <HBox alignment="CENTER_LEFT" spacing="20">
                <padding><Insets left="40"/></padding>
                <Button fx:id="usersButton" text="Users" styleClass="nav-button" onAction="#handleUsersClick"/>
                <Button fx:id="friendCountButton" text="Friend Count" styleClass="nav-button" onAction="#handleFriendCountClick"/>
                <Button fx:id="userActivityButton" text="User Activity" styleClass="nav-button" onAction="#handleUserActivityClick"/>
                <Button fx:id="loginHistoryButton" text="Login History" styleClass="nav-button" onAction="#handleLoginHistoryClick"/>
                <Button fx:id="groupsButton" text="Groups" styleClass="nav-button" onAction="#handleGroupsClick"/>
                <Button fx:id="spamReportsButton" text="Spam Reports" styleClass="nav-button" onAction="#handleSpamReportClick"/>
                <Button fx:id="userRegistrationChartButton" text="Reg Chart" styleClass="nav-button" onAction="#handleUserRegistrationChartClick"/>
                <Button fx:id="activeUsersChartButton" text="Active Chart" styleClass="nav-button" onAction="#handleActiveUsersChartClick"/>
            </HBox>
        </center>

        <right>
            <HBox alignment="CENTER_RIGHT" spacing="20">
                <padding><Insets right="20"/></padding>
                <Label text="ADMIN MODE" style="-fx-text-fill: #ed4245; -fx-font-weight: 800; -fx-font-size: 14px; -fx-background-color: #ed424520; -fx-padding: 5 10; -fx-background-radius: 5;"/>
            </HBox>
        </right>
    </BorderPane>
</StackPane>