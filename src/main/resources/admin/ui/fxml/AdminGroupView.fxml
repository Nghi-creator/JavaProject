<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>
<?import java.lang.String?>

<StackPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.chatroom.admin.controllers.AdminGroupViewController" styleClass="root" stylesheets="@../../../shared/ui/css/DiscordTheme.css">
    <BorderPane prefHeight="720.0" prefWidth="1280.0">
        <top>
            <fx:include fx:id="header" source="AdminHeader.fxml"/>
        </top>

        <center>
            <HBox spacing="10">
                <BorderPane.margin><Insets top="10"/></BorderPane.margin>

                <StackPane HBox.hgrow="ALWAYS">
                    <styleClass><String fx:value="panel"/><String fx:value="chat-area-panel"/></styleClass>
                    <VBox spacing="10">
                        <padding><Insets top="10" right="10" bottom="10" left="10"/></padding>
                        <HBox spacing="10">
                            <fx:include fx:id="searchBar" source="../../../user/ui/fxml/SearchBar.fxml"/>
                            <ComboBox fx:id="sortCombo" promptText="Sort By" styleClass="admin-action-button"/>
                        </HBox>
                        <TableView fx:id="groupTable" VBox.vgrow="ALWAYS">
                            <columns>
                                <TableColumn fx:id="colGroupName" text="Group Name" prefWidth="250" reorderable="false"/>
                                <TableColumn fx:id="colCreated" text="Created At" prefWidth="150" reorderable="false"/>
                                <TableColumn fx:id="colAction" text="Action" prefWidth="100" reorderable="false"/>
                            </columns>
                            <columnResizePolicy><TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/></columnResizePolicy>
                        </TableView>
                    </VBox>
                </StackPane>

                <StackPane prefWidth="300" styleClass="admin-details-panel">
                    <VBox spacing="15">
                        <padding><Insets top="15" right="15" bottom="15" left="15"/></padding>

                        <HBox alignment="CENTER">
                            <Text text="Group Details" styleClass="suggested-header"/>
                        </HBox>

                        <Text text="Admins" styleClass="form-label"/>
                        <ListView fx:id="adminListView" styleClass="member-list" VBox.vgrow="SOMETIMES" prefHeight="100"/>

                        <Text text="Members" styleClass="form-label"/>
                        <ListView fx:id="memberListView" styleClass="member-list" VBox.vgrow="ALWAYS"/>
                    </VBox>
                </StackPane>
            </HBox>
        </center>
    </BorderPane>
</StackPane>