<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import java.lang.String?>

<StackPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.chatroom.admin.controllers.AdminUserViewController" styleClass="root" stylesheets="@../../../shared/ui/css/DiscordTheme.css">
    <BorderPane prefHeight="720.0" prefWidth="1280.0">
        <top>
            <fx:include fx:id="header" source="AdminHeader.fxml"/>
        </top>

        <center>
            <StackPane>
                <BorderPane.margin><Insets top="10"/></BorderPane.margin>
                <styleClass><String fx:value="panel"/><String fx:value="chat-area-panel"/></styleClass>

                <VBox spacing="15">
                    <padding><Insets top="15" right="15" bottom="15" left="15"/></padding>

                    <HBox spacing="10" alignment="CENTER_LEFT">
                        <fx:include fx:id="searchBar" source="../../../user/ui/fxml/SearchBar.fxml"/>

                        <ComboBox fx:id="statusFilterCombo" promptText="Status" styleClass="admin-action-button" prefWidth="120"/>

                        <Region prefWidth="20" />

                        <Label text="From:" styleClass="normal-text"/>
                        <DatePicker fx:id="startDatePicker" prefWidth="130"/>

                        <Label text="To:" styleClass="normal-text"/>
                        <DatePicker fx:id="endDatePicker" prefWidth="130"/>

                        <Region HBox.hgrow="ALWAYS"/>

                        <ComboBox fx:id="sortCombo" promptText="Sort by..." styleClass="admin-action-button"/>

                        <Button text="+ Add User" styleClass="admin-action-button" onAction="#openAddUser"/>
                    </HBox>

                    <TableView fx:id="userTable" VBox.vgrow="ALWAYS">
                        <columns>
                            <TableColumn fx:id="colUsername" text="Username" prefWidth="120" reorderable="false"/>
                            <TableColumn fx:id="colFullname" text="Full Name" prefWidth="150" reorderable="false"/>
                            <TableColumn fx:id="colAddress" text="Address" prefWidth="150" reorderable="false"/>
                            <TableColumn fx:id="colDob" text="Date of Birth" prefWidth="100" reorderable="false"/>
                            <TableColumn fx:id="colGender" text="Gender" reorderable="false"/>
                            <TableColumn fx:id="colEmail" text="Email" prefWidth="200" reorderable="false"/>
                            <TableColumn fx:id="colStatus" text="Status" reorderable="false"/>
                            <TableColumn fx:id="colCreated" text="Created At" prefWidth="120" reorderable="false"/>
                            <TableColumn fx:id="colAction" text="Actions" prefWidth="460" reorderable="false"/>
                        </columns>
                        <columnResizePolicy><TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/></columnResizePolicy>
                    </TableView>
                </VBox>
            </StackPane>
        </center>
    </BorderPane>
</StackPane>