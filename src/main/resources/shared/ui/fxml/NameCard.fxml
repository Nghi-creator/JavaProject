<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>

<Button xmlns:fx="http://javafx.com/fxml/1" styleClass="name-card" stylesheets="@/shared/ui/css/NameCard.css"
        fx:controller="com.example.chatroom.core.shared.controllers.NameCardController" maxWidth="Infinity">

    <graphic>
        <HBox spacing="10" alignment="CENTER_LEFT" maxWidth="Infinity">
            <fx:include fx:id="statusIcon" source="/shared/ui/fxml/StatusIcon.fxml"/>
            <Label fx:id="nameLabel" styleClass="name-card-label" text="Name"/>
        </HBox>
    </graphic>

</Button>
