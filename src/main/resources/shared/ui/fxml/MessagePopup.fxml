<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.HBox?>

<StackPane xmlns="http://javafx.com/javafx"
           xmlns:fx="http://javafx.com/fxml"
           fx:id="root"
           fx:controller="com.example.chatroom.core.shared.controllers.MessagePopupController"
           stylesheets="@../../../shared/ui/css/DiscordTheme.css"
           styleClass="gradient-bg">

    <VBox spacing="20" prefHeight="200" prefWidth="360" alignment="CENTER">
        <VBox spacing="20" HBox.hgrow="ALWAYS" maxWidth="Infinity" style="-fx-padding: 20;">
            <Label fx:id="messageLabel"
                   text="This is a message"
                   wrapText="true"
                   maxWidth="Infinity"
                   styleClass="heading1"
                   alignment="CENTER"/>

            <HBox alignment="CENTER">
                <Button text="Close"
                        fx:id="closeButton"
                        onAction="#handleClose"
                        styleClass="normal-button,translucent-bg"/>
            </HBox>
        </VBox>
    </VBox>
</StackPane>
