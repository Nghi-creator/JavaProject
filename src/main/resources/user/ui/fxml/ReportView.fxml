<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TextArea?>

<StackPane xmlns="http://javafx.com/javafx/17"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="com.example.user.controllers.ReportViewController"
           stylesheets="/shared/ui/css/DiscordTheme.css">

    <ScrollPane fitToWidth="true"
                hbarPolicy="NEVER">
        <VBox spacing="20"
              styleClass="root"
              prefWidth="400"
              alignment="TOP_CENTER">


            <HBox spacing="10" alignment="CENTER_LEFT" prefWidth="400">
                <Label text="Report" styleClass="title"/>
                <Region HBox.hgrow="ALWAYS"/>
                <Button text="Back" onAction="#handleBack" styleClass="normal-button"/>
            </HBox>


            <VBox spacing="15"
                  styleClass="panel,gradient-bg"
                  style="-fx-padding: 15;"
                  maxWidth="380">

                <Label text="Submit a Report" styleClass="heading1"/>
                <Separator/>


                <HBox spacing="10" alignment="CENTER_LEFT">
                    <Label text="Reporting:" styleClass="bold-text"/>
                    <Label fx:id="reportedAccountLabel"
                           text="username123"
                           styleClass="darkened-text"/>
                </HBox>

                <HBox spacing="10" alignment="CENTER_LEFT">
                    <Label text="Reason:" styleClass="bold-text"/>
                    <TextField fx:id="reportTitleField"
                               styleClass="input-field,darkened-gradient-bg"
                               prefWidth="220"/>
                </HBox>

                <VBox spacing="5">
                    <Label text="Description:" styleClass="bold-text"/>
                    <TextArea fx:id="reportDescriptionField"
                              styleClass="input-field,darkened-gradient-bg"
                              prefRowCount="5"
                              wrapText="true"/>
                </VBox>

                <Button text="Submit Report"
                        onAction="#handleSubmitReport"
                        styleClass="normal-button"
                        style="-fx-background-color: #544766;"
                        maxWidth="150"/>

            </VBox>


            <Region minHeight="20"/>

        </VBox>
    </ScrollPane>

</StackPane>
