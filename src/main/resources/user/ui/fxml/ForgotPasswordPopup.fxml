<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Label?>

<VBox xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.chatroom.user.controllers.ForgotPasswordPopupController"
      alignment="CENTER"
      spacing="20"
      prefWidth="360"
      prefHeight="250"
      fillWidth="false"
      stylesheets="@/shared/ui/css/DiscordTheme.css">

    <Label text="RESET PASSWORD"
           styleClass="title"/>

    <VBox alignment="CENTER" spacing="12" prefWidth="260">
        <TextField fx:id="emailField"
                   promptText="Email"
                   styleClass="input-field"/>
        <Button text="Confirm"
                onAction="#handleConfirm"
                styleClass="normal-button"
                maxWidth="Infinity"/>
    </VBox>

    <Label text="You will receive a new password via email."
           styleClass="normal-text"
           wrapText="true"
           maxWidth="260"/>
</VBox>
