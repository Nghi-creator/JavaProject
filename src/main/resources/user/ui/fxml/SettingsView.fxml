<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.collections.FXCollections?>
<?import java.lang.String?>
<?import javafx.scene.control.DatePicker?>

<StackPane xmlns="http://javafx.com/javafx/17"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="com.example.chatroom.core.shared.controllers.SettingsViewController"
           stylesheets="/shared/ui/css/DiscordTheme.css">

    <ScrollPane fitToWidth="true" hbarPolicy="NEVER" vbarPolicy="AS_NEEDED">
        <VBox spacing="20" styleClass="root" prefWidth="400" prefHeight="500">

            <HBox spacing="10" alignment="CENTER_LEFT">
                <Label text="Settings" styleClass="title"/>
                <Region HBox.hgrow="ALWAYS"/>
                <Button text="Back" onAction="#handleBack" styleClass="normal-button"/>
            </HBox>

            <VBox spacing="10" styleClass="panel,gradient-bg" style="-fx-padding: 10;">
                <Label text="Account" styleClass="heading1"/>
                <Separator/>

                <HBox spacing="10" alignment="CENTER_LEFT">
                    <Label text="Username:" styleClass="bold-text"/>
                    <Label fx:id="lblUsername" text="..." styleClass="darkened-text"/>
                </HBox>

                <HBox spacing="10" alignment="CENTER_LEFT">
                    <Label text="Email:" styleClass="bold-text"/>
                    <Label fx:id="lblEmail" text="..." styleClass="darkened-text"/>
                </HBox>

                <HBox spacing="10" alignment="CENTER_LEFT">
                    <Label text="Full Name:" styleClass="bold-text"/>
                    <Label fx:id="lblFullName" text="..." styleClass="darkened-text"/>
                </HBox>

                <HBox spacing="10" alignment="CENTER_LEFT">
                    <Label text="Address:" styleClass="bold-text"/>
                    <Label fx:id="lblAddress" text="..." styleClass="darkened-text"/>
                </HBox>

                <HBox spacing="10" alignment="CENTER_LEFT">
                    <Label text="Date of Birth:" styleClass="bold-text"/>
                    <Label fx:id="lblDob" text="..." styleClass="darkened-text"/>
                </HBox>

                <HBox spacing="10" alignment="CENTER_LEFT">
                    <Label text="Gender:" styleClass="bold-text"/>
                    <Label fx:id="lblGender" text="..." styleClass="darkened-text"/>
                </HBox>

                <HBox spacing="10" alignment="CENTER_LEFT">
                    <Button text="Update Account Information" onAction="#handleUpdateAccountInfo"
                            styleClass="normal-button" style="-fx-background-color: #544766;"/>
                    <Button text="Change Password" onAction="#toggleChangePassword" styleClass="normal-button"
                            style="-fx-background-color: #544766;"/>
                </HBox>
            </VBox>

            <VBox fx:id="accountEditPanel" spacing="10" styleClass="panel,gradient-bg" style="-fx-padding: 10;"
                  visible="false" managed="false">
                <Label text="Edit Account" styleClass="heading1"/>
                <Separator/>
                <HBox spacing="10" alignment="CENTER_LEFT">
                    <Label text="Username:" styleClass="bold-text"/>
                    <TextField fx:id="usernameField" styleClass="input-field,darkened-gradient-bg" editable="false"/>
                </HBox>
                <HBox spacing="10" alignment="CENTER_LEFT">
                    <Label text="First Name:" styleClass="bold-text"/>
                    <TextField fx:id="firstNameField" styleClass="input-field,darkened-gradient-bg"/>
                </HBox>
                <HBox spacing="10" alignment="CENTER_LEFT">
                    <Label text="Last Name:" styleClass="bold-text"/>
                    <TextField fx:id="lastNameField" styleClass="input-field,darkened-gradient-bg"/>
                </HBox>
                <HBox spacing="10" alignment="CENTER_LEFT">
                    <Label text="Email:" styleClass="bold-text"/>
                    <TextField fx:id="emailField" styleClass="input-field,darkened-gradient-bg"/>
                </HBox>
                <HBox spacing="10" alignment="CENTER_LEFT">
                    <Label text="Address:" styleClass="bold-text"/>
                    <TextField fx:id="addressField" styleClass="input-field,darkened-gradient-bg"/>
                </HBox>
                <HBox spacing="10" alignment="CENTER_LEFT">
                    <Label text="Date of Birth:" styleClass="bold-text"/>
                    <DatePicker fx:id="dobPicker" styleClass="date-picker"/>
                </HBox>
                <HBox spacing="10" alignment="CENTER_LEFT">
                    <Label text="Gender:" styleClass="bold-text"/>
                    <ComboBox fx:id="genderCombo" styleClass="normal-combo"/>
                </HBox>
                <Button fx:id="btnSaveProfile" text="Save" onAction="#handleSaveProfile" styleClass="normal-button"
                        style="-fx-background-color: #544766;"/>
            </VBox>

            <VBox fx:id="changePasswordPanel" spacing="10" styleClass="panel,gradient-bg" style="-fx-padding: 10;"
                  visible="false" managed="false">
                <Label text="Change Password" styleClass="heading1"/>
                <Separator/>
                <HBox spacing="10" alignment="CENTER_LEFT">
                    <Label text="Current Password:" styleClass="bold-text"/>
                    <PasswordField fx:id="currentPasswordField" styleClass="input-field,darkened-gradient-bg" prefWidth="200"/>
                </HBox>
                <HBox spacing="10" alignment="CENTER_LEFT">
                    <Label text="New Password:" styleClass="bold-text"/>
                    <PasswordField fx:id="newPasswordField" styleClass="input-field,darkened-gradient-bg" prefWidth="200"/>
                </HBox>
                <HBox spacing="10" alignment="CENTER_LEFT">
                    <Label text="Confirm Password:" styleClass="bold-text"/>
                    <PasswordField fx:id="confirmPasswordField" styleClass="input-field,darkened-gradient-bg" prefWidth="200"/>
                </HBox>
                <HBox spacing="10" alignment="CENTER_LEFT">
                    <Button fx:id="btnChangePassword" text="Save" onAction="#handleChangePassword" styleClass="normal-button"
                            style="-fx-background-color: #544766;"/>
                    <Button text="Generate &amp; Send to Email" onAction="#handleGeneratePassword"
                            styleClass="normal-button" style="-fx-background-color: #544766;"/>
                </HBox>
            </VBox>

            <VBox spacing="10" styleClass="panel,gradient-bg" style="-fx-padding: 10;">
                <Label text="Appearance" styleClass="heading1"/>
                <Separator/>
                <HBox spacing="10" alignment="CENTER_LEFT">
                    <Label text="Theme:" styleClass="bold-text"/>
                    <ComboBox fx:id="themeSelector" styleClass="theme-combo" prefWidth="150">
                        <items>
                            <FXCollections fx:factory="observableArrayList">
                                <String fx:value="Light"/>
                                <String fx:value="Dark"/>
                                <String fx:value="Discord"/>
                            </FXCollections>
                        </items>
                    </ComboBox>
                </HBox>
            </VBox>

            <VBox spacing="10" styleClass="panel,gradient-bg" style="-fx-padding: 10;">
                <Label text="Notifications" styleClass="heading1"/>
                <Separator/>
                <CheckBox fx:id="notificationsCheck" text="Enable Notifications" styleClass="normal-text"/>
            </VBox>

        </VBox>
    </ScrollPane>
</StackPane>