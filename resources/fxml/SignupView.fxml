<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>

<?import javafx.scene.control.ComboBox?>
<?import javafx.collections.FXCollections?>
<?import java.lang.String?>
<?import javafx.scene.control.DatePicker?>
<VBox xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="controllers.SignupViewController"
      alignment="CENTER"
      spacing="20"
      prefWidth="360"
      prefHeight="600"
      fillWidth="false"
      stylesheets="@/css/DiscordTheme.css">


    <VBox alignment="CENTER" spacing="10">
        <ImageView fx:id="logoImage"
                   fitWidth="120"
                   preserveRatio="true"
                   pickOnBounds="true">
            <Image url="@../images/feline.png"/>
        </ImageView>

        <Label text="CHATROOM"
               styleClass="title"/>
    </VBox>


    <VBox alignment="CENTER" spacing="12" prefWidth="260">
        <TextField fx:id="usernameField"
                   promptText="Username"
                   styleClass="input-field"
                   maxWidth="200"/>
        <TextField fx:id="emailField"
                   promptText="Email"
                   styleClass="input-field"
                   maxWidth="200"/>
        <TextField fx:id="fullNameField"
                   promptText="Full Name"
                   styleClass="input-field"
                   maxWidth="200"/>
        <TextField fx:id="addressField"
                   promptText="Address"
                   styleClass="input-field"
                   maxWidth="200"/>
        <DatePicker fx:id="DOBPicker" maxWidth="200"/>
        <ComboBox fx:id="genderSelector" styleClass="normal-combo" maxWidth="200">
            <items>
                <FXCollections fx:factory="observableArrayList">
                    <String fx:value="Male"/>
                    <String fx:value="Female"/>
                    <String fx:value="Other"/>
                </FXCollections>
            </items>
        </ComboBox>
        <PasswordField fx:id="passwordField"
                       promptText="Password"
                       styleClass="input-field"
                       maxWidth="200"/>
        <PasswordField fx:id="confirmPasswordField"
                       promptText="Confirm Password"
                       styleClass="input-field"
                       maxWidth="200"/>
        <Button text="Sign Up"
                onAction="#handleSignup"
                styleClass="normal-button"
                maxWidth="150"/>
        <Label text="Already have an account? Log in"
               styleClass="normal-text,clickable"
               onMouseClicked="#switchToLogin"/>
    </VBox>

</VBox>
