<?xml version="1.0" encoding="UTF-8"?>

<!--
  *** UPDATES ***
  - Removed title labels ("Friend List", etc.) above search bars.
  - Changed "Matching Results" to "Your friends".
  - Updated text colors to white/light gray for visibility.
  - Removed "Send Request" button from "Your friends" section in Find Friends.
-->

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.Circle?>
<?import javafx.scene.text.Text?>
<?import java.lang.String?>

<StackPane xmlns="http://javafx.com/javafx/17"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="controllers.FriendsViewController"
           styleClass="root"
           stylesheets="@../css/DiscordTheme.css">

    <BorderPane prefHeight="720.0" prefWidth="1280.0">
        <top>
            <fx:include fx:id="header" source="Header.fxml"/>
        </top>

        <center>
            <StackPane BorderPane.alignment="CENTER">
                <BorderPane.margin>
                    <Insets top="10" left="10" right="10"/>
                </BorderPane.margin>
                <styleClass>
                    <String fx:value="panel"/>
                    <String fx:value="chat-area-panel"/>
                </styleClass>

                <BorderPane>
                    <padding>
                        <Insets top="10" left="10" right="10" bottom="10"/>
                    </padding>
                    
                    <!-- LEFT NAV -->
                    <left>
                        <VBox spacing="10" prefWidth="200" styleClass="friends-nav-bar">
                            <padding>
                                <Insets right="10"/>
                            </padding>
                            <Button fx:id="btnFriendList" text="Friend List" styleClass="friends-nav-button-selected" onAction="#showFriendList"/>
                            <Button fx:id="btnFriendRequests" text="Friend Requests" styleClass="friends-nav-button" onAction="#showRequests"/>
                            <Button fx:id="btnFindFriends" text="Find Friends" styleClass="friends-nav-button" onAction="#showFindFriends"/>
                            <Button fx:id="btnBlocked" text="Blocked" styleClass="friends-nav-button" onAction="#showBlocked"/>
                        </VBox>
                    </left>
                    
                    <!-- CENTER CONTENT -->
                    <center>
                        <StackPane styleClass="friends-content-area">
                             
                             <!-- 1. FRIEND LIST VIEW -->
                             <VBox fx:id="friendListPane" spacing="15" visible="true">
                                 <!-- Removed Title Text -->
                                 <fx:include source="SearchBar.fxml"/>
                                 <VBox spacing="10">
                                     <!-- Friend Item 1 (Online) -->
                                     <HBox alignment="CENTER_LEFT" spacing="10">
                                         <fx:include source="NameCard.fxml"/>
                                         <Region HBox.hgrow="ALWAYS"/>
                                         <Button text="Unfriend" styleClass="friend-action-button"/>
                                         <Button text="Block" styleClass="friend-action-button-danger"/>
                                     </HBox>
                                     <!-- Friend Item 2 -->
                                     <HBox alignment="CENTER_LEFT" spacing="10">
                                         <fx:include source="NameCard.fxml"/>
                                         <Region HBox.hgrow="ALWAYS"/>
                                         <Button text="Unfriend" styleClass="friend-action-button"/>
                                         <Button text="Block" styleClass="friend-action-button-danger"/>
                                     </HBox>
                                 </VBox>
                             </VBox>

                             <!-- 2. REQUESTS VIEW -->
                             <VBox fx:id="requestsPane" spacing="15" visible="false">
                                 <!-- Removed Title Text -->
                                 <fx:include source="SearchBar.fxml"/>
                                 <VBox spacing="10">
                                     <HBox alignment="CENTER_LEFT" spacing="10">
                                         <fx:include source="NameCard.fxml"/>
                                         <Region HBox.hgrow="ALWAYS"/>
                                         <Button text="Accept" styleClass="friend-action-button"/>
                                         <Button text="Decline" styleClass="friend-action-button-danger"/>
                                     </HBox>
                                 </VBox>
                             </VBox>

                             <!-- 3. FIND FRIENDS VIEW -->
                             <VBox fx:id="findFriendsPane" spacing="15" visible="false">
                                 <!-- Removed Title Text -->
                                 <fx:include source="SearchBar.fxml"/>
                                 <VBox spacing="10">
                                     <!-- Changed text to "Your friends" and white color -->
                                     <Label text="Your friends" styleClass="heading1"/>
                                     <HBox alignment="CENTER_LEFT" spacing="10">
                                         <fx:include source="NameCard.fxml"/>
                                         <!-- Removed buttons for already friends -->
                                     </HBox>
                                     <Separator styleClass="list-separator"/>
                                     
                                     <!-- Changed text color to white -->
                                     <Label text="People you may know" styleClass="heading1"/>
                                     <HBox alignment="CENTER_LEFT" spacing="10">
                                         <fx:include source="NameCard.fxml"/>
                                         <Region HBox.hgrow="ALWAYS"/>
                                         <Button text="Send Request" styleClass="friend-action-button"/>
                                     </HBox>
                                 </VBox>
                             </VBox>

                             <!-- 4. BLOCKED VIEW -->
                             <VBox fx:id="blockedPane" spacing="15" visible="false">
                                 <!-- Removed Title Text -->
                                 <fx:include source="SearchBar.fxml"/>
                                 <VBox spacing="10">
                                     <HBox alignment="CENTER_LEFT" spacing="10">
                                         <fx:include source="NameCard.fxml"/>
                                         <Region HBox.hgrow="ALWAYS"/>
                                         <Button text="Unblock" styleClass="friend-action-button"/>
                                     </HBox>
                                 </VBox>
                             </VBox>

                        </StackPane>
                    </center>
                </BorderPane>
            </StackPane>
        </center>
    </BorderPane>
</StackPane>