<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>

<VBox spacing="15" style="-fx-background-color: #202225; -fx-padding: 20;"
 xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
 stylesheets="@../css/DiscordTheme.css" prefWidth="500" prefHeight="400">

    <Text text="User's Friends List" style="-fx-fill: white; -fx-font-size: 18px; -fx-font-weight: 700;"/>

    <HBox spacing="10">
        <fx:include source="SearchBar.fxml"/>
        <ComboBox promptText="Sort By (A-Z)" styleClass="admin-action-button"/>
    </HBox>

    <TableView VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn text="Friend Username" prefWidth="200"/>
            <TableColumn text="Status" prefWidth="100"/>
            <TableColumn text="Friend Since" prefWidth="150"/>
        </columns>
        <columnResizePolicy><TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/></columnResizePolicy>
    </TableView>
    
</VBox>